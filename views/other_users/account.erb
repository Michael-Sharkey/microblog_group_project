<h1>Account Info</h1>
<h2>User ID</h2>
<p><%= @other_user.id %></p>

<h2>Current Username</h2>
<p> <%= @other_user.username %> </p>

<h2>Profile</h2>
<p> Location: <%= @other_user.location %> </p>
<p> Age: <%= @other_user.age %> </p>
<p> Pet Peeves: <%= @other_user.petpeeves %> </p>


<section>
  <h3>Your Shrieks!</h3>
  <ul style="list-style-type:none">
    <% @other_user.posts.each do |post| %>
      <li>
          <p><%= post.text %></p>
      </li>
    <% end %>
  </ul>
</section>
